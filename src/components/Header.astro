<script is:inline>
  function toggleMobileMenu() {
    const mobileMenu = document.getElementById("mobile-menu");
    mobileMenu.classList.toggle("translate-x-full");
  }
</script>

<header
  id="header"
  class="absolute inset-0 z-50 flex h-20 items-center justify-center overflow-x-clip border-b border-slate-700 text-white"
>
  <div
    class="flex w-full flex-row justify-between px-8 sm:justify-start md:px-24"
  >
    <a href="/"
      ><img
        src="/img/c+ studios wordmark trans.png"
        class="h-10 w-auto invert"
      /></a
    >
    <nav
      class="ml-10 hidden flex-row items-center space-x-5 font-semibold sm:flex"
    >
      <HeaderLinks />
    </nav>
    <div class="flex text-right sm:hidden">
      <button
        type="button"
        class="inline-flex items-center justify-center rounded-md p-2 focus:ring"
        onclick="toggleMobileMenu()"
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
        </svg>
      </button>
    </div>
  </div>

  <nav
    id="mobile-menu"
    class="fixed right-0 top-0 flex h-screen w-full translate-x-full flex-row transition-transform duration-200 sm:hidden"
  >
    <button onclick="toggleMobileMenu()" class="h-screen w-1/6 cursor-default"
    ></button>
    <div
      class="flex h-screen w-5/6 flex-col items-start border-l border-slate-900 bg-red-800 p-8"
    >
      <button
        type="button"
        class="inline-flex items-center justify-center rounded-md p-2 focus:ring"
        onclick="toggleMobileMenu()"
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
        </svg>
      </button>
      <div
        class="ml-3 flex flex-col items-start space-y-2 text-lg font-semibold"
      >
        <HeaderLinks />
      </div>
    </div>
  </nav>
</header>
