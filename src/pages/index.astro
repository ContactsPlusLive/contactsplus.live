const globals = await directus.request(
  readSingleton("global", {
    fields: ["main_hero", "hero_cover", "hero_wolf"],
  }),
);

const latestEpisodes = await directus.request(
  readItems("videos", {
    fields: [
      "id",
      { season: ["season_num"] },
      "episode_num",
      "title",
      "thumbnail",
      "published_at",
    ],
    sort: ["-published_at"],
    limit: 3,
  }),
);

const staff = await directus.request(
  readItems("people", {
    fields: [
      "sort",
      "name",
      "staff_title",
      "portrait",
      "discord",
      "telegram",
      "bsky",
      "fediverse",
      "website",
      "xitter",
    ],
    filter: {
      staff: {
        _eq: true,
      },
    },
    sort: ["sort"],
  }),
);
