---
import type { GetStaticPaths } from "astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const episodes = await getCollection("episodes");
const sortedEpisodes = episodes.sort((a, b) => {
  const aDate = new Date(a.data.airDate);
  const bDate = new Date(b.data.airDate);
  return aDate > bDate ? -1 : 1;
}).filter((episode) => episode.id !== Astro.params.slug);

export const getStaticPaths = (async () => {
  const episodes = await getCollection("episodes");
  return episodes.map((episode) => ({
    params: {
      slug: episode.id,
    },
    props: { episode },
  }));
}) satisfies GetStaticPaths;

const { episode } = Astro.props;

import { getCrewRoles, getNiceDate } from "../../content/config";
---

<BaseLayout
  title=`Contacts Plus â€“ S${episode.data.season} E${episode.data.episode}`
>
  <main class="flex flex-col items-center w-full">
    <cover
      class="fixed inset-0 -z-20 w-full h-screen overflow-hidden flex justify-center"
    >
      <img
        src=`https://i.ytimg.com/vi/${episode.data.ytID}/maxresdefault.jpg`
        alt="YouTube thumbnail"
        class="w-full h-auto object-cover"
      />
    </cover>
    <content class="relative w-full pt-16 pb-6 flex justify-center">
      <faders class="absolute -z-10 inset-0 flex flex-col">
        <!-- left gradient -->
        <div
          class="hidden sm:block absolute inset-0 -z-10"
          style="background: linear-gradient(54deg,hsl(228.6, 84%, 4.9%) 15%,transparent 70%);"
        >
        </div>
        <!-- bottom gradient -->
        <div
          class="h-[48em]"
          style="background: linear-gradient(180deg,hsla(0,0%,7%,0) 40%,#020617);"
        >
        </div>
        <!-- solid bottom -->
        <div class="bg-slate-950 flex-1"></div>
      </faders>
      <div class="min-h-screen pt-[24em] px-4 md:px-24 w-full">
        <div class="w-full md:w-1/2">
          <h1 class="text-6xl font-bold">
            {episode.data.title}
          </h1>
          <div class="mt-4 flex flex-row font-light space-x-4 text-lg">
            <div>
              <span>S{episode.data.season}</span>
              <span>E{episode.data.episode}</span>
            </div>
            <span>{getNiceDate(episode.data.airDate)}</span>
          </div>
          <div class="mt-2">
            <p>
              {episode.data.description}
            </p>
          </div>
          <div class="mt-6">
            <a
              href=`https://youtu.be/${episode.data.ytID}`
              class="p-3 bg-gradient-to-br from-indigo-500 to-indigo-900 hover:from-indigo-900 hover:to-indigo-500 rounded-lg"
            >
              Watch video now</a
            >
          </div>
          <div class="mt-5">
            Tags: {episode.data.tags.join(", ")}
          </div>
        </div>
        <div class="mt-10">
          <h2 class="text-3xl font-bold">Who's in this episode?</h2>
          <div class="flex flex-row flex-wrap items-stretch gap-6 mt-3">
            <div class="rounded border border-slate-700 p-6 w-full md:w-auto min-w-64">
              <h3 class="text-xl font-bold">Crew</h3>
              <ul class="list-disc list-inside">
                {
                  episode.data.crew.map((crewMember) => (
                    <li>
                      {crewMember.name} &ndash; {getCrewRoles(crewMember.role)}
                    </li>
                  ))
                }
              </ul>
            </div>
            <div class="rounded border border-slate-700 p-6 w-full md:w-auto min-w-64">
              <h3 class="text-xl font-bold">Guests</h3>
              <ul class="list-disc list-inside">
                {episode.data.guests.map((guest) => <li>{guest}</li>)}
              </ul>
            </div>
          </div>
          <div>
            <h2 class="text-3xl font-bold mt-10">Other Episodes</h2>
            <div class="flex flex-row flex-wrap gap-6 mt-3">
              {
                sortedEpisodes.map((otherEpisode) => (
                  <div class="w-full md:w-72">
                    <a href={`/episodes/${otherEpisode.id}`}>
                      <img
                        class="w-full md:w-72 h-auto hover:brightness-75 transition-all"
                        src={`https://i.ytimg.com/vi/${otherEpisode.data.ytID}/maxresdefault.jpg`}
                      />
                      <div class="flex flex-row text-sm font-light mt-2 gap-3">
                        <span class="font-semibold">
                          <!-- prettier-ignore -->
                          S{otherEpisode.data.season} E{otherEpisode.data.episode}
                        </span>
                        <span class="text-slate-400">
                          {getNiceDate(otherEpisode.data.airDate)}
                        </span>
                      </div>
                      <span class="leading-tight">
                        {otherEpisode.data.title}
                      </span>
                    </a>
                  </div>
                ))
              }
            </div>
          </div>
        </div>
      </div>
    </content>
  </main>
</BaseLayout>
